{
  "name": "card-app",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "nuxt",
    "doc": "run-p doc:*",
    "doc:template": "json-refs resolve -w documents/data/templates.yml > static/data/templates.json",
    "doc:profiles": "json-refs resolve -w documents/data/profiles.yml > static/data/profiles.json",
    "doc:usage": "json-refs resolve -w documents/data/usage.yml > static/data/usage.json",
    "build": "nuxt build",
    "start": "nuxt start",
    "export": "nuxt export",
    "generate": "run-s generate:*",
    "generate:doc": "npm run doc",
    "generate:build": "nuxt build --target static && nuxt export",
    "serve": "nuxt serve",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore .",
    "lint:fix": "eslint --fix --ext .js,.vue --ignore-path .gitignore ."
  },
  "dependencies": {
    "@babel/polyfill": "^7.10.4",
    "@nuxtjs/axios": "^5.12.1",
    "@nuxtjs/markdownit": "^1.2.10",
    "body-scroll-lock": "^3.0.3",
    "fibers": "^5.0.0",
    "markdown-it-attrs": "^3.0.3",
    "markdown-it-div": "^1.1.0",
    "nuxt": "^2.13.0",
    "qrcode.vue": "^1.7.0",
    "sass": "^1.26.10",
    "sass-loader": "^9.0.3",
    "vue-color": "^2.7.1",
    "vue-html2canvas": "0.0.4",
    "vuelidate": "^0.7.5",
    "vuex-persistedstate": "^3.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.10.5",
    "@babel/preset-env": "^7.10.4",
    "@babel/register": "^7.10.5",
    "@nuxtjs/dotenv": "^1.4.1",
    "@nuxtjs/tailwindcss": "^2.1.0",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.1.0",
    "eslint": "^7.5.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-vue": "^6.2.2",
    "eslint-plugin-vue-scoped-css": "^1.0.0",
    "husky": "^4.2.5",
    "json-refs": "^3.0.15",
    "lint-staged": "^10.2.11",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "tailwindcss-aspect-ratio": "^3.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{vue,js}": "eslint --fix --ignore-path .gitignore --"
  }
}
